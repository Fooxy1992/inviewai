rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Função auxiliar para verificar se o usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Função auxiliar para verificar se o usuário é dono do recurso
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Regras para a coleção de usuários
    match /usuarios/{userId} {
      // Apenas o próprio usuário pode ler ou escrever seus dados
      allow read, write: if isOwner(userId);
    }
    
    // Regras para a coleção de entrevistas
    match /entrevistas/{entrevistaId} {
      // O usuário pode ler ou escrever apenas suas próprias entrevistas
      allow read, write: if isOwner(resource.data.usuarioId);
      
      // Permissão para criar uma nova entrevista
      allow create: if isAuthenticated() && request.resource.data.usuarioId == request.auth.uid;
    }
    
    // Regras para a coleção de perguntas
    match /perguntas/{perguntaId} {
      // Função para verificar se o usuário é dono da entrevista associada
      function isEntrevistaOwner() {
        let entrevistaId = resource.data.entrevistaId;
        let entrevista = get(/databases/$(database)/documents/entrevistas/$(entrevistaId));
        return isOwner(entrevista.data.usuarioId);
      }
      
      // O usuário pode ler ou escrever apenas perguntas de suas próprias entrevistas
      allow read, write: if isEntrevistaOwner();
      
      // Permissão para criar uma nova pergunta para uma entrevista existente
      allow create: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/entrevistas/$(request.resource.data.entrevistaId)) &&
                     get(/databases/$(database)/documents/entrevistas/$(request.resource.data.entrevistaId)).data.usuarioId == request.auth.uid;
    }
    
    // Regras para a coleção de atividades
    match /atividades/{atividadeId} {
      // O usuário pode ler apenas suas próprias atividades
      allow read: if isOwner(resource.data.usuarioId);
      
      // Permissão para criar um registro de atividade
      allow create: if isAuthenticated() && request.resource.data.usuarioId == request.auth.uid;
      
      // Ninguém pode modificar ou excluir registros de atividades
      allow update, delete: if false;
    }
  }
} 